{% extends 'base.html.twig' %}

{% block title %}Articles{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="card">
            <img src="..." class="card-img-top" alt="...">
            <div class="card-body">
                <h5 class="card-title">{{article.title}}</h5>
                <p class="card-text">{{article.content|u.truncate(100,'...')}}</p>
            </div>
            <div class="card-footer">
                <small>{{article.category}}</small> <br>
                <small>{{article.author}}</small>
                <small>{{article.createdAt|date('y-m-d')}}</small>
            </div>
        </div>
        <a href="{{path('home')}}" class="btn btn-primary">Return</a>
    </div>
</div>
{% endblock %}